@model IEnumerable<Ingredient>

@{
    ViewData["Title"] = "Ingredients List Page";
}

<div class="row mt-5 mb-3">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <h3 class="text-primary">List of Ingredients</h3>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        
    </div>
</div>

<div class="border-3 p-5 shadow rounded-3">
    <div class="mb-5">
        <a class="btn btn-outline-primary float-end new-btn">New</a>
    </div>
    <table class="table table-hover table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th width="90%">Name</th>
                <th class="table-th-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-controller="Ingredients" asp-action="Details" asp-route-id="@item.IngredientId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>